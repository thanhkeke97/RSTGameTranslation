<Application x:Class="RSTGameTranslation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RSTGameTranslation">
    <Application.Resources>
    <Color x:Key="BgColor">#F7FAFC</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="Surface2Color">#F3F8FD</Color>
    <Color x:Key="Surface3Color">#EBF4FB</Color>
    <Color x:Key="AccentColor">#0066CC</Color>
    <Color x:Key="BorderColor">#E0ECF8</Color>
    <Color x:Key="NeutralBgColor">#E6EEF3</Color>

    <SolidColorBrush x:Key="BgBrush" Color="{DynamicResource BgColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource SurfaceColor}"/>
    <SolidColorBrush x:Key="Surface2Brush" Color="{DynamicResource Surface2Color}"/>
    <SolidColorBrush x:Key="Surface3Brush" Color="{DynamicResource Surface3Color}"/>
    <SolidColorBrush x:Key="NeutralBgBrush" Color="{DynamicResource NeutralBgColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="#0B2545"/>
    <SolidColorBrush x:Key="MutedBrush" Color="#5B6B7A"/>
    </Application.Resources>
</Application>