                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock FontWeight="Bold" Text="Create Profile: " HorizontalAlignment="Left"
                                    Grid.Row="0" Grid.Column="0" Margin="0,10,0,0"/>
